{
  "manifest_version": 3,
  "name": "Gmail Task Extractor",
  "version": "1.0.0",
  "description": "Extract tasks from Gmail emails",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Gmail Task Extractor"
  },
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["content.bundle.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "host_permissions": [
    "*://mail.google.com/*",
    "*://*.googleusercontent.com/*"
  ],
  "permissions": [
    "storage",
    "contextMenus",
    "tabs",
    "activeTab",
    "scripting"
  ],
    
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.html", "*.css", "*.json"],
      "matches": ["*://mail.google.com/*", "*://*.googleusercontent.com/*"]
    }
  ]
}