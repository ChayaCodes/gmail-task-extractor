{
  "manifest_version": 3,
  "name": "Gmail Task Extractor",
  "version": "1.0",
  "description": "Extracts tasks from Gmail and adds them to Google Calendar using AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity"
  ],
  "background": {
    "service_worker": "src/background/background.ts"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["src/content/main.ts"]
    }
  ],
  "action": {
    "default_popup": "public/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["public/popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}