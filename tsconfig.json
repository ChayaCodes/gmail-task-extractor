{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "components/*", "services/*", "interfaces/*", "utils/*"]
    },
    "jsx": "react",
    "jsxFactory": "h" 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}